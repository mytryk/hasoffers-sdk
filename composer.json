{
    "name"              : "item8/hasoffers",
    "type"              : "library",
    "description"       : "",
    "license"           : "proprietary",
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "denis.smetannikov@unilead.net"
        }
    ],
    "require"           : {
        "php"               : ">=7.0",
        "jbzoo/http-client" : "^1.2",
        "jbzoo/utils"       : "^2.0",
        "jbzoo/event"       : "^1.4",
        "jbzoo/data"        : "^1.6.1|^2.0"
    },
    "require-dev"       : {
        "jbzoo/phpunit"     : "^2.0",
        "item8/codestyle" : "^1.0",
        "jbzoo/profiler"  : "^1.0"
    },
    "repositories"      : {
        "item8/codestyle" : {
            "type" : "git",
            "url"  : "http://code.unilead.net/unilead/codestyle.git"
        }
    },
    "autoload"          : {
        "psr-4" : {
            "Item8\\HasOffers\\" : "src"
        }
    },
    "autoload-dev"      : {
        "classmap" : ["tests"]
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },

    "config"            : {
        "optimize-autoloader" : false,
        "secure-http"         : false
    }
}
